<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Blog.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Blog.App"
    xmlns:views="clr-namespace:Blog.App.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="BlogPosts"
        ContentTemplate="{DataTemplate views:BlogPosts}"
        Route="BlogPosts"/>

</Shell>
